<!DOCTYPE html>
<html lang="fr">
    <head id="top-section">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>{% block title %}{% endblock %}</title>
        <link rel="index" title="Balise Meta" href="{{ app.request.schemeAndHttpHost }}/" />
        <link rel="canonical" href="{{ app.request.schemeAndHttpHost }}/" />
        <link rel="shortcut icon" href="{{ app.request.relativeUriForPath(asset('assets/img/favicon/favicon.ico')) }}">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">

        {% block stylesheets %}
            {{ include('ui/_stylesheets.html.twig', {'path': 'assets/css/bootstrap.css'}) }}
            {{ include('ui/_stylesheets.html.twig', {'path': 'assets/css/mdb.css'}) }}
            {{ include('ui/_stylesheets.html.twig', {'path': 'assets/css/style.css'}) }}
        {% endblock %}
    </head>
    <body class="fixed-sn skin-light">
        {{ include('ui/_flashes.html.twig') }}
        {{ include('ui/_loading.html.twig') }}

        <header>
            {% block app_navbar %}{% endblock %}
        </header>

        <main class="px-3 px-md-1">
            {% block app_body %}{% endblock %}
        </main>

        {{ include('ui/_confirmation.html.twig') }}

        <script>
            window.hostel = {
                ...(window.hostel || {}),
                ADMIN: {{ is_granted('ROLE_SUPER_ADMIN') ? 'true' : 'false' }},
                USER: {{ app.user ? app.user.id : 'null' }}
            }
        </script>
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        {% block javascripts %}
            {{ include('ui/_javascripts.html.twig', {'path': 'assets/js/jquery.js'}) }}
            {{ include('ui/_javascripts.html.twig', {'path': 'assets/js/popper.js'}) }}
            {{ include('ui/_javascripts.html.twig', {'path': 'assets/js/bootstrap.js'}) }}
            {{ include('ui/_javascripts.html.twig', {'path': 'assets/js/mdb.js'}) }}
            {{ include('ui/_javascripts.html.twig', {'path': 'assets/js/function.js'}) }}
        {% endblock %}
    </body>
</html>

