<section class="container mb-5 mt-40 mt-md-6">
    <div class="row">
        <div class="col-12">
            <h3 class="h3-responsive font-weight-bold text-dark my-4">Tableau de bord</h3>
        </div>
        <div class="col-12 info col-md-6 col-lg-4 mb-5">
            <div class="card promoting-card">
                <div class="card-body d-flex flex-row">
                    <div class="avatar pr-2">
                        <div class="user-prefix d-inline-block rounded-circle">
                            {{ userPrefixName(app.user.firstname) }}
                        </div>
                    </div>
                    <div>
                        <h4 class="h4-responsive font-weight-bold text-dark mb-1">{{ user }}</h4>
                        <div class="card-text font-weight-stone-500 small-8" data-toggle="tooltip" title="Date d'inscription">
                            <i class="fas fa-clock mr-1"></i> Inscrit le {{ user.createdAt|date('d/m/Y Ã  H:i') }}
                        </div>
                    </div>
                </div>
                <div class="card-body px-4 pt-1 pb-3">
                    <ul class="card-text list-unstyled">
                        <li class="font-weight-stone-500">
                            <i class="fas fa-envelope mr-1"></i> {{ user.email }}
                        </li>
                        <li class="font-weight-stone-500 mt-3">
                            <i class="fas fa-phone-alt mr-1"></i> {{ user.phone }}
                        </li>
                        <li class="font-weight-stone-500 mt-3"
                            data-toggle="tooltip" title="Ville">
                            <i class="fas fa-map-marker-alt mr-1"></i>
                            {% if user.city and user.country %}
                                {{ user.city }} ({{ user.country|country_name }})
                            {% elseif user.country %}
                                {{ user.country|country_name }}
                            {% elseif user.city %}
                                {{ user.city }}
                            {% else %}
                                <span class="badge badge-grey">Aucun</span>
                            {% endif %}
                        </li>
                        <li class="font-weight-stone-500 mt-3"
                            data-toggle="tooltip" title="Nom d'utilisation">
                            {% if user.username %}
                                @{{ user.username }}
                            {% else %}
                                @ <span class="badge badge-grey">Aucun</span>
                            {% endif %}
                        </li>
                        <li class="font-weight-stone-500 mt-3"
                            data-toggle="tooltip" title="Adresse">
                            <i class="fas fa-address-book mr-1"></i>
                            {% if user.address %}{{ user.address }}{% else %}
                                <span class="badge badge-grey">Aucun</span>
                            {% endif %}
                        </li>
                        <li class="mt-4">
                            <a href="{{ path('app_user_profil_edit') }}" class="card-link">Modifier votre profil</a>
                        </li>
                        <li class="mt-3">
                            <a href="{{ path('app_user_change_password') }}" class="card-link">Modifier votre mot de passe</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-5">
            <div class="card weather-card">
                <div class="card-body text-center">
                    <h4 class="card-title h4-responsive text-dark font-weight-bold">Reservation confirmer</h4>
                    <p class="display-1 text-dark font-weight-bold">{{ booking }}</p>

                    <hr class="mt-2 mb-3">

                    <a href="{{ path('app_user_booking_confirmed_index') }}" class="card-link">Vos reservations confirmer</a>
                </div>
            </div>
        </div>
    </div>
</section>