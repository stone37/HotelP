<div class="col-12 col-md-6 col-lg-3 mb-4">
    <div class="card user-booking-view">
        <div class="card-body p-3">
            <div class="mb-3">
                <div class="d-flex justify-content-between mb-1">
                    <div class="font-weight-stone-500 small-9">Arrivée</div>
                    <div class="font-weight-bold text-dark small-9">{{ booking.checkin|format_datetime('full', 'none', locale='fr') }}</div>
                </div>
                <div class="d-flex justify-content-between">
                    <div class="font-weight-stone-500 small-9">Départ</div>
                    <div class="font-weight-bold text-dark small-9">{{ booking.checkout|format_datetime('full', 'none', locale='fr') }}</div>
                </div>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <div class="font-weight-stone-500 small-9">Durée du séjour</div>
                <div class="font-weight-bold small-9 text-primary">{{ booking.days }} nuits</div>
            </div>
            <div class="room-select">
                <div class="font-weight-stone-500 small-9">Votre sélection</div>
                <div class="font-weight-stone-500 grey-text">
                    <div class="small-8 font-weight-bold">
                        <i class="fas fa-angle-double-right mr-1 text-default"></i> {{ booking.roomNumber }} <span class="small-7" style="padding-left: 1px; padding-right: 1px;">X</span>
                        <a href="{{ path('app_room_show', {'slug': booking.room.slug}) }}" class="card-link">{{ booking.room.name }}</a>
                    </div>
                    <div class="small-8 font-weight-bold">
                        <i class="fas fa-angle-double-right mr-1 text-default"></i> Pour
                        {% if booking.children %}
                            {{ booking.adult }} adultes et {{ booking.children }} enfant par chambre
                        {% else %}
                            {{ booking.adult }} adultes par chambre
                        {% endif %}
                    </div>
                </div>
            </div>

            {% if state %}
                <div class="mt-2">
                    <div class="font-weight-stone-500 small-9">Numéro de reservation</div>
                    <div class="font-weight-bold booking-number text-center h5-responsive bg-primary text-white"
                         style="border-radius: 0.3rem; padding-top: 4px; padding-bottom: 2px;">
                        {{ booking.number }}
                    </div>
                </div>
            {% endif %}

            {% if booking.cancelledAt and booking.commande %}
                <div class="text-right mt-2">
                    {% if booking.commande.payment.refunded %}
                        <div class="badge badge-success font-weight-stone-500 small-8">
                            <i class="fas fa-check mr-2"></i> Rembourser
                        </div>
                    {% else %}
                        <div class="badge badge-danger font-weight-stone-500 small-8">
                            <i class="fas fa-times mr-2"></i> Non rembourser
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>