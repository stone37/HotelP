{% if room.galleries|length %}
    <div id="mdb-lightbox-ui"></div>

    <div class="row px-md-2">
        <div class="col-lg-4 col-md-6">
            <div class="mdb-lightbox">
                <div class="row">
                    <figure class="col-md-12 principale">
                        <a href="{{ asset(room.galleries.first.webPath) }}" data-size="1400x1067">
                            <img id="principale" src="{{ asset(room.galleries.first.webPath) }}" class="img-fluid z-depth-1" alt="{{ room.galleries.first.name }}" />
                        </a>
                    </figure>
                    {% for gallery in room.galleries %}
                        {% if gallery != room.galleries.first %}
                            <figure class="col-md-3 d-none">
                                <a href="{{ asset(gallery.webPath) }}" data-size="1400x1067">
                                    <img {% if loop.index == 7 %}id="img-plus"{% endif %} src="{{ asset(gallery.webPath) }}" class="img-fluid" alt="{{ gallery.name }}" />
                                </a>
                            </figure>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-6">
            <div class="row mdb-lightbox">
                <figure class="col-md-4 col-6 children">
                    <a href="{{ asset(room.galleries.first.webPath) }}" data-size="1400x1067">
                        <img src="{{ asset(room.galleries.first.webPath) }}" class="img-fluid z-depth-1" alt="{{ room.galleries.first.name }}" />
                    </a>
                </figure>
                {% for key, gallery in room.galleries %}
                    {% if gallery != room.galleries.first %}
                        {% if key < 6 %}
                            <figure class="col-md-4 col-6 children">
                                <a href="{{ asset(gallery.webPath) }}" data-size="1400x1067">
                                    <img src="{{ asset(gallery.webPath) }}" class="img-fluid z-depth-1" alt="{{ gallery.name }}" />
                                </a>
                            </figure>
                            {% if key == 5 %}
                                {% if room.galleries|length > 2 %}
                                    <div class="lightbox-plus">
                                        <div>
                                            <i class="fas fa-images"></i>
                                            <span class="nbr-image">{{ room.galleries|length - 6 }}</span>
                                            <i class="fas fa-plus"></i>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endif %}
                        {% else %}
                            <figure class="col-md-4 col-6 d-none">
                                <a href="{{ asset(gallery.webPath) }}" data-size="1400x1067">
                                    <img src="{{ asset(gallery.webPath) }}" class="img-fluid" alt="{{ gallery.name }}" />
                                </a>
                            </figure>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}


