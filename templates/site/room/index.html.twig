{% extends 'site/layout.html.twig' %}

{% block title 'Nos hébergements' %}

{% set settings = config.get %}

{% block meta %}
    {% set content = 'Nos hébergements' %}
    <meta name="description" content="{{ content }}"/>
    <meta property="og:description" content="{{ content }}" />
{% endblock %}

{% block app_flashes %}{% endblock %}

{% block app_intro %}
    <div class="view intro data" style="background-image: url({{ asset('assets/img/nos_hebergement.jpg') }}); background-repeat: no-repeat; background-size: cover;">
        <div class="mask rgba-black-strong d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row d-flex justify-content-center wow fadeIn">
                    <div class="col-12 col-md-10 mb-4 text-white text-center">
                        <h1 class="display-4 font-weight-bold text-white d-none d-md-block mt-md-5 pt-md-5 mt-md-0 text-center">Nos hébergements</h1>
                        <h1 class="display-5 font-weight-bold text-white d-block d-md-none"
                            style="font-size: 2.6rem !important; line-height: 40px !important">
                            Nos hébergements
                        </h1>
                        <div class="bc room d-flex justify-content-center">
                            {{ wo_render_breadcrumbs({
                                viewTemplate: '_breadcrumb.html.twig',
                                listClass: 'breadcrumb',
                                itemClass: 'breadcrumb-item',
                                separator: '>',
                                separatorClass: 'fas fa-angle-double-right'}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ render(controller('App\\Controller\\BookingController::search')) }}
{% endblock %}

{% block app_body %}
    {{ include('site/room/index/content.html.twig') }}

    {{ include('site/newsletter/_subscribe.html.twig') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ include('ui/_javascripts.html.twig', {'path': 'assets/js/site/booking.js'}) }}
    <script>
        $("#mdb-lightbox-ui").load("/assets/mdb-addons/mdb-lightbox-ui.html");
    </script>
{% endblock %}


