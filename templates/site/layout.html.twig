{% extends 'base.html.twig' %}

{% set settings = config.get %}

{% block app_navbar %}
    <nav class="navbar navbar-expand-lg navbar-light py-2 py-md-3 fixed-top">
        <div class="container">
            {{ include('site/layout/_logo.html.twig', {'config': config}) }}
            {{ include('site/layout/_navbar_mobile_btn.html.twig') }}

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggle" aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
                <div class="button-icon"><i class="fas fa-stream"></i></div>
            </button>

            <div class="collapse navbar-collapse" id="navbarToggle">
                <ul class="navbar-nav ml-auto">
                    {{ include('site/layout/_nav_item.html.twig') }}

                    {{ render(controller('App\\Controller\\SecurityWidgetController::show')) }}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}





