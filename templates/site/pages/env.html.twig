{% extends 'site/layout.html.twig' %}

{% block title 'À propos de nous' %}

{% block meta %}
    {% set content = "À propos de nous" %}
    <meta name="description" content="{{ content }}"/>
    <meta property="og:description" content="{{ content }}" />
{% endblock %}

{% block app_intro %}
    <div class="view intro data" style="background-image: url({{ asset('assets/img/default.jpg') }}); background-repeat: no-repeat; background-size: cover;">
        <div class="mask rgba-black-strong d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row d-flex justify-content-center wow fadeIn">
                    <div class="col-12 col-md-10 mb-4 text-white text-center">
                        <h1 class="display-4 font-weight-bold text-white d-none d-md-block mt-md-5 pt-md-5 mt-md-0 text-center">À propos de l'hôtel</h1>
                        <h1 class="display-5 font-weight-bold text-white d-block d-md-none" style="font-size: 2.6rem !important;">À propos de l'hôtel</h1>
                        <div class="bc d-flex promotion justify-content-center">
                            {{ breadcrumb('À propos de l\'hôtel') }}
                            {{ wo_render_breadcrumbs({
                                viewTemplate: '_breadcrumb.html.twig',
                                listClass: 'breadcrumb',
                                itemClass: 'breadcrumb-item',
                                separator: '>',
                                separatorClass: 'fas fa-angle-double-right'}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block app_body %}
    {{ include('site/pages/env/_content.html.twig') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

