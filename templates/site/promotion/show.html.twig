{% extends 'site/layout.html.twig' %}

{% block title promotion.name ~ ' |  Nos offres' %}

{% block meta %}
    {% set content = promotion.description %}
    <meta name="description" content="{{ content }}"/>
    <meta property="og:description" content="{{ content }}" />
{% endblock %}

{% block app_flashes %}{% endblock %}

{% block app_intro %}
    <div class="view intro data" style="background-image: url({{ vich_uploader_asset(promotion, 'file') }}); background-repeat: no-repeat; background-size: cover;">
        <div class="mask rgba-black-strong d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row d-flex justify-content-center wow fadeIn">
                    <div class="col-12 col-md-10 mb-4 text-center">
                        <h1 class="display-4 font-weight-bold text-white d-none d-md-block mt-md-5 pt-md-5 mt-md-0 text-center">{{ promotion.name }}</h1>
                        <h1 class="display-5 font-weight-bold text-white d-block d-md-none mt-4"
                            style="font-size: 2rem !important; line-height: 35px !important">{{ promotion.name }}</h1>
                        <div class="bc d-flex promotion justify-content-center">
                            {{ wo_render_breadcrumbs({
                                viewTemplate: '_breadcrumb.html.twig',
                                listClass: 'breadcrumb',
                                itemClass: 'breadcrumb-item',
                                separator: '>',
                                separatorClass: 'fas fa-angle-double-right'}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block app_body %}
    {{ include('site/promotion/show/content.html.twig') }}

    {{ include('site/newsletter/_subscribe.html.twig') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {
            bookingSelectData();
        });
    </script>
{% endblock %}


