<div class="row d-flex justify-content-center justify-content-md-start">
    <div class="col-12 col-md-4">
        {{ form_row(form.name) }}
    </div>
    <div class="col-12 col-md-4">
        {{ form_widget(form.description) }}
    </div>
    <div class="col-12">
        <div class="row">
            <div class="col-12">
                <h6 class="font-weight-bold dark-grey-text mt-3">Valeurs</h6>
            </div>
            <div id="equipment-form-value-wrapper" class="col-12 equipment-form-value-wrapper"
                 data-prototype="{{ form_widget(form.values.vars.prototype)|e('html_attr') }}"
                 data-index="{{ form.values|length }}">
                {% for field in form.values %}
                    <div class="form-row equipment-data-row">
                        <div class="col-10 col-md-4 col-lg-3">{{ form_row(field.value) }}</div>
                        {% if not loop.first %}
                            <div class="col-2 col-md-1">
                                <a id="{{ loop.index0 }}" class="delete_equipment btn-floating btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
            <div class="col-12">
                <a id="add_new_equipment" class="btn btn-primary btn-sm add_new_equipment mt-2">
                    <i class="fas fa-plus-square mr-1"></i> Ajouter une valeur
                </a>
            </div>
        </div>
    </div>
</div>





